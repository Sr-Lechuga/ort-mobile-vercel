    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Voluntarios",
          "item": [
            {
              "name": "Login Voluntario",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "// Guardar el token en variable de entorno",
                      "if (pm.response.code === 200) {",
                      "    var jsonData = pm.response.json();",
                      "    pm.environment.set(\"volunteerToken\", jsonData.token);",
                      "    pm.environment.set(\"authToken\", jsonData.token);",
                      "    console.log(\"Token de voluntario guardado exitosamente\");",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"username\": \"voluntario_test\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/volunteers/login",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "volunteers", "login"]
                },
                "description": "Autentica a un voluntario y devuelve un token de sesión"
              },
              "response": []
            },
            {
              "name": "Registro Voluntario",
              "request": {
