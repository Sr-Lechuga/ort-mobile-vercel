    {
      "name": "Actividades",
      "item": [
        {
          "name": "Listar Actividades",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/activities",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "activities"],
              "query": [
                {
                  "key": "categories",
                  "value": "social",
                  "description": "Filtrar por categorías (social, ambiental, educativo, cultural, salud, emergencia)",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "en curso",
                  "description": "Filtrar por estado (inactiva, en curso)",
                  "disabled": true
                },
                {
                  "key": "location",
                  "value": "Montevideo",
                  "description": "Filtrar por ubicación",
                  "disabled": true
                }
              ]
            },
            "description": "Obtiene todas las actividades disponibles con filtros opcionales"
          },
          "response": []
        },
        {
          "name": "Crear Actividad",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar el ID de la actividad creada",
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"activityId\", jsonData.insertedActivity._id);",
                  "    console.log(\"ID de actividad guardado: \" + jsonData.insertedActivity._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Limpieza de Playa Pocitos\",\n  \"categories\": [\"ambiental\", \"social\"],\n  \"description\": \"Actividad de limpieza y cuidado del medio ambiente en la playa de Pocitos\",\n  \"status\": \"en curso\",\n  \"location\": {\n    \"country\": \"Uruguay\",\n    \"city\": \"Montevideo\",\n    \"address\": \"Rambla República del Perú\"\n  },\n  \"locationCoordinates\": {\n    \"type\": \"Point\",\n    \"coordinates\": [-56.1532, -34.9099]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/activities",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "activities"]
            },
            "description": "Crea una nueva actividad de voluntariado (requiere autenticación de organizador)"
          },
          "response": []
        },
        {
          "name": "Actualizar Actividad",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{authToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Limpieza de Playa Pocitos - Actualizado\",\n  \"categories\": [\"ambiental\", \"social\"],\n  \"description\": \"Actividad de limpieza y cuidado del medio ambiente en la playa de Pocitos. NUEVA INFORMACIÓN: Traer bolsas y guantes\",\n  \"status\": \"en curso\",\n  \"location\": {\n    \"country\": \"Uruguay\",\n    \"city\": \"Montevideo\",\n    \"address\": \"Rambla República del Perú\"\n  },\n  \"locationCoordinates\": {\n    \"type\": \"Point\",\n    \"coordinates\": [-56.1532, -34.9099]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/activities",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "activities"]
            },
            "description": "Actualiza una actividad de voluntariado existente (requiere ser propietario)"
          },
          "response": []
        }
