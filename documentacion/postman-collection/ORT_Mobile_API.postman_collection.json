    {
      "name": "Instancias de Actividades",
      "item": [
        {
          "name": "Crear Instancia de Actividad",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar el ID de la instancia creada",
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"instanceId\", jsonData.insertedActivityInstance._id);",
                  "    console.log(\"ID de instancia guardado: \" + jsonData.insertedActivityInstance._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
