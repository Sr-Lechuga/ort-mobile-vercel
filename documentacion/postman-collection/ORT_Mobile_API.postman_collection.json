    {
      "name": "Inscripciones",
      "item": [
        {
          "name": "Inscribirse a Instancia",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guardar el ID de la inscripción creada",
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"inscriptionId\", jsonData.inscription._id);",
                  "    console.log(\"ID de inscripción guardado: \" + jsonData.inscription._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{volunteerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/activities/{{activityId}}/instances/{{instanceId}}/inscriptions",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "activities", "{{activityId}}", "instances", "{{instanceId}}", "inscriptions"]
            },
            "description": "Permite a un voluntario inscribirse a una instancia específica de actividad"
          },
          "response": []
        },
        {
          "name": "Marcar Asistencia",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{organizerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"assisted\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/activities/{{activityId}}/instances/{{instanceId}}/inscriptions/{{inscriptionId}}/attendance",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "activities", "{{activityId}}", "instances", "{{instanceId}}", "inscriptions", "{{inscriptionId}}", "attendance"]
            },
            "description": "Permite al organizador marcar si un voluntario asistió a una instancia (requiere ser propietario)"
          },
          "response": []
        },
        {
          "name": "Cancelar Inscripción",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{volunteerToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/volunteers/inscriptions/{{inscriptionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "volunteers", "inscriptions", "{{inscriptionId}}"]
            },
            "description": "Permite a un voluntario cancelar su inscripción a una instancia de actividad"
          },
          "response": []
        }
      ]
